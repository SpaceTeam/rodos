{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "gcc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "flags",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Wno-long-long -Wno-cpp -Wconversion -Wsign-conversion -Wdouble-promotion -Wcast-qual -Wnull-dereference",
        "CMAKE_CXX_EXTENSIONS": "OFF"
      }
    },
    {
      "name": "linux-x86",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/port/linux-x86.cmake"
      }
    },
    {
      "name": "nucleo_l432kc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/port/nucleo_l432kc.cmake"
      }
    },
    {
      "name": "nucleo_l496zg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/port/nucleo_l496zg.cmake"
      }
    },
    {
      "name": "discovery",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/port/discovery.cmake"
      }
    },
    {
      "name": "tutorials",
      "hidden": true,
      "cacheVariables": {
        "EXECUTABLE": "ON"
      }
    },
    {
      "name": "coverage",
      "hidden": true,
      "cacheVariables": {
        "COVERAGE": "ON"
      }
    },
    {
      "name": "default",
      "description": "Default preset using GCC to build for linux-x86.",
      "inherits": [
        "gcc",
        "flags",
        "linux-x86"
      ],
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Unix Makefiles"
    }
  ]
}